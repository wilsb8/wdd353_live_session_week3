<%-include ('./includes/nav')%>
<%-include ('./includes/header')%>

<body>
   <h2>Register</h2>

    <form action="register" method="POST">
      <% if (typeof errors != 'undefined') %>
        <div class="form-group wb-3 w-25">
           <label for="firstName" class="form-label">First Name</label>
           <input type="text" class="form-control" name="firstName" id="firstName"> <%- errors.firstName %>
        </div>

        <div class="form-group wb-3 w-25">
            <label for="lastName" class="form-label">Last Name</label>
            <input type="text" class="form-control" name="lastName" id="lastName"> <%- errors.lastName %>
         </div>

         <div class="form-group wb-3 w-25">
            <label for="address" class="form-label">Address</label>
            <input type="text" class="form-control" name="address" id="address"> <%- errors.address %>
         </div>

         <div class="form-group wb-3 w-25">
            <label for="city" class="form-label">City</label>
            <input type="text" class="form-control" name="City" id="address"> <%- errors.city %>
         </div>

         <div class="form-group wb-3 w-25">
            <label for="state" class="form-label">State</label>
            <input type="text" class="form-control" name="state" id="state"> <%- errors.state %>
         </div>

         <div class="form-group w-25 w-25">
            <label for="zipcode" class="form-label">ZIP Code</label>
            <input type="text" class="form-control" name="zipcode" id="zipcode"> <%- errors.zipcode %>
         </div>

         <div class="form-group wb-3 w-25">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" name="email" id="email"> <%- errors.email %>
         </div>

         <div class="form-group wb-3 w-25">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" name="password" id="password"> <%- errors.password %>
         </div>

        
        
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>

<%-include('./includes/footer')%>